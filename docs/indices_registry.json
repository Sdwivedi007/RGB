{
  "version": "1.0",
  "notes": "Formula registry for multispectral indices. Variables: R, G, B, NIR, RE (red edge).",
  "indices": {
    "NDVI": {"formula": "(NIR - R) / (NIR + R)"},
    "NDVI630": {"formula": "(NIR - R630) / (NIR + R630)", "aliases": ["R630"]},
    "NDRE": {"formula": "(NIR - RE) / (NIR + RE)"},
    "CLRE": {"formula": "(NIR / RE) - 1"},
    "SMI_PROXY": {"formula": "(NIR - SWIR) / (NIR + SWIR)", "aliases": ["SWIR"]},
    "PIGMENT": {"formula": "(R - G) / (R + G)"},
    "MOISTURE": {"formula": "(NIR - SWIR) / (NIR + SWIR)", "aliases": ["SWIR"]},
    "GLI": {"formula": "(2*G - R - B) / (2*G + R + B)"},
    "GCC": {"formula": "G / (R + G + B)"},
    "FCOVER": {"formula": "(NDVI - 0.2) / (0.8 - 0.2)", "requires": ["NDVI"]},
    "BRI": {"formula": "(R + G + B) / 3"},
    "STRESS": {"formula": "(R - NIR) / (R + NIR)"},
    "DISEASE_PROXY": {"formula": "(R - G) / (R + G)"},
    "STRUCTURE": {"formula": "(NIR + R) / 2"},
    "TRANSITION": {"formula": "(NIR - G) / (NIR + G)"},
    "BSI_NIR_PROXY": {"formula": "((R + SWIR) - (NIR + B)) / ((R + SWIR) + (NIR + B))", "aliases": ["SWIR"]},
    "SAVI": {"formula": "((NIR - R) / (NIR + R + 0.5)) * 1.5"}
  }
}
